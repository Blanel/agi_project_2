<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    
    android:orientation					="horizontal"
    android:layout_width				="match_parent"
    android:layout_height				="match_parent"
    tools:context						=".MainActivity" >
	
	<ImageView
	    android:id						="@+id/imageViewBK"
	    android:layout_width			="wrap_content"
	    android:layout_height			="wrap_content"
	    android:layout_alignParentLeft	="true"
	    android:layout_alignParentTop	="true"
	    android:src						="@drawable/airp"
	/>
    
	<ImageView
	    android:id						="@+id/imageFire"
	    android:layout_width			="wrap_content"
	    android:layout_height			="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight	="true"
	    android:layout_alignParentTop	="true"
	    android:src						="@drawable/mod_target"
	    android:background				="#8600ACE0" 
	    
	/>

	<ImageView
	    android:id						="@+id/imageGas"
	    android:layout_width			="wrap_content"
	    android:layout_height			="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft	="true"
	    android:layout_alignParentTop	="true"
	    android:src						="@drawable/propeller"
	    android:background				="#8600ACE0" 
	/>
	


	<ImageView
	    android:id						="@+id/imageViewLife"
	    android:layout_width			="wrap_content"
	    android:layout_height			="wrap_content"
	    android:layout_alignParentLeft	="true"
	    android:layout_alignParentTop	="true"
	    android:src						="@drawable/life5" 
	/>

	<ImageView
	    android:id						="@+id/imageRedFlash"
	    android:layout_width			="wrap_content"
	    android:layout_height			="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft	="true"
	    android:layout_alignParentRight	="true"
	    android:layout_alignParentTop	="true"
	    android:background				="#00E00000" 
	    />
	
</RelativeLayout>

