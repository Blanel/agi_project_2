<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation					="horizontal"
    android:layout_width				="match_parent"
    android:layout_height				="match_parent"
    tools:context						=".MainActivity" 
    
    >
	<VideoView
	    android:id						="@+id/videoViewBK"
	    android:layout_width			="0dp"
	    android:layout_height			="0dp"
	    android:layout_alignParentLeft	="true"
	    android:layout_alignParentTop	="true"
	    android:layout_alignParentRight ="true"
	    android:layout_alignParentBottom="true"
	/>
	<ImageView
	    android:id						="@+id/imageFire"
	    android:layout_width			="55dp"
	    android:layout_height			="fill_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight	="true"
	    android:layout_alignParentTop	="true"
	    android:src						="@drawable/mod_target"
	    android:background				="#8600ACE0" 
	/>
	<ImageView
	    android:id						="@+id/imageGas"
	    android:layout_width			="55dp"
	    android:layout_height			="fill_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft	="true"
	    android:layout_alignParentTop	="true"
	    android:src						="@drawable/propeller"
	    android:background				="#8600ACE0" 
	/>
	<ImageView
	    android:id						="@+id/imageViewLife"
	    android:layout_width			="150dp"
	    android:layout_height			="75dp"
	    android:layout_toLeftOf			= "@id/imageFire"
	    android:layout_alignParentTop	="true"
	    android:src						="@drawable/life5" 
	/>
	<ImageView
	    android:id						="@+id/imageViewNavigation"
	    android:layout_width			="175dp"
	    android:layout_height			="175dp"
	    android:layout_marginRight		="5dp"
	    android:layout_alignParentBottom = "true"
	    android:layout_toLeftOf			= "@id/imageFire"
	    android:src						="@drawable/navigation2" 
	/>
	<ImageView
	    android:id						="@+id/imageViewArrow"
	    android:layout_width			="175dp"
	    android:layout_height			="175dp"
	    android:layout_marginRight		="5dp"
	    android:layout_alignParentBottom = "true"
	    android:layout_toLeftOf			= "@id/imageFire"
	    android:src						="@drawable/a0" 
	/>
		<ImageView
	    android:id						="@+id/imageRedFlash"
	    android:layout_width			="match_parent"
	    android:layout_height			="match_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft	="true"
	    android:layout_alignParentRight	="true"
	    android:layout_alignParentTop	="true"
	    android:background				="#00E00000" 
	    />
	
</RelativeLayout>